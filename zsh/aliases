function tmux-attach-current() {
  tmux new-session -A -s $PWD:t
}

alias ll="ls -lAG"
alias wip="git add -A && git commit -n -m 'WIP'"
alias ta="tmux-attach-current"
alias tat="tmux attach"
alias vi="neovide"
alias vim="neovide"
alias nvim="neovide"
alias be="bundle exec"
alias poweroverwhelming="ps xau | grep "timer.sh" | grep -v grep | awk '{print $2}' | xargs sudo kill"
